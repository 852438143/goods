<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <!--过滤器在初始化的时候就加载了,如果出错,tomcat启动失败 -->
    <!-- 这个字符过滤器有问题,只能处理页面传过来的ISO-8859-1
    <filter>
        <filter-name>EncondingFilter</filter-name>
        <filter-class>cn.itcast.filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncondingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>-->

    <filter>
        <filter-name>EncodeFilter</filter-name>
        <filter-class>com.ylw.goods.util.filter.EncodeFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.ylw.goods.util.filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <servlet-name>CartItemServlet</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <servlet-name>OrderServlet</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/jsps/order/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/jsps/cart/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>com.ylw.goods.util.filter.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/adminjsps/admin/*</url-pattern>
        <url-pattern>/admin/*</url-pattern>
        <!--<servlet-name>/admin/*</servlet-name>&lt;!&ndash;因为servlet写在admin下,所以这里不能使用这种方式过滤,也应该使用url-pattern来过滤&ndash;&gt;-->
    </filter-mapping>

    <servlet>
        <servlet-name>OrderServlet</servlet-name>
        <servlet-class>com.ylw.goods.servlet.OrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderServlet</servlet-name>
        <url-pattern>/OrderServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CartItemServlet</servlet-name>
        <servlet-class>com.ylw.goods.servlet.CartItemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CartItemServlet</servlet-name>
        <url-pattern>/CartItemServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>VerifyCodeServlet</servlet-name>
        <servlet-class>cn.itcast.vcode.servlet.VerifyCodeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VerifyCodeServlet</servlet-name>
        <url-pattern>/VerifyCodeServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.ylw.goods.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/UserServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CategoryServlet</servlet-name>
        <servlet-class>com.ylw.goods.servlet.CategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoryServlet</servlet-name>
        <url-pattern>/CategoryServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BookServlet</servlet-name>
        <servlet-class>com.ylw.goods.servlet.BookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookServlet</servlet-name>
        <url-pattern>/BookServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>com.ylw.goods.admin.servlet.AdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/AdminServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminCategoryServlet</servlet-name>
        <servlet-class>com.ylw.goods.admin.servlet.AdminCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminCategoryServlet</servlet-name>
        <url-pattern>/admin/AdminCategoryServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminBookServlet</servlet-name>
        <servlet-class>com.ylw.goods.admin.servlet.AdminBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminBookServlet</servlet-name>
        <url-pattern>/admin/AdminBookServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddAdminBookServlet</servlet-name>
        <servlet-class>com.ylw.goods.admin.servlet.AddAdminBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddAdminBookServlet</servlet-name>
        <url-pattern>/admin/AddAdminBookServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminOrderServlet</servlet-name>
        <servlet-class>com.ylw.goods.admin.servlet.AdminOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminOrderServlet</servlet-name>
        <url-pattern>/admin/AdminOrderServlet</url-pattern>
    </servlet-mapping>
</web-app>